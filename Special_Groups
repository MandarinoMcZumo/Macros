Sub CDV_Grupos_Especiales_Check()


Dim grupo As Range, dia As Integer

Application.ScreenUpdating = False

Range("B:B").UnMerge

For Each grupo In Range("B1:B300")
    If grupo = "VV" Or grupo = "V" Or grupo = "G" Or grupo = "P" Or grupo = "PP" Or grupo = "J" Or grupo = "JJ" Or grupo = "I" Or grupo = "K" Then
        
        dia = 0
        
        While dia < 21
        
            If grupo.Offset(7, 2 + dia) + grupo.Offset(0, 4 + dia) < grupo.Offset(1, 3 + dia) Then
                
                With grupo.Offset(7, 2 + dia)
                
                .Font.Bold = True
                .Font.Color = vbRed
                .Borders.Color = vbRed
                
                End With
                           
            End If
            
            dia = dia + 1
            
        Wend
        
'    Else: MsgBox ("No hay grupos especiales en esta oficina")
        
    End If
    
Next

Application.ScreenUpdating = True

MsgBox ("Grupos especiales revisados")

End Sub
