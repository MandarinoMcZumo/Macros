Sub Creacion_Diarios()
   
    
'Desactiva la visualización
    Application.ScreenUpdating = False
    Application.DisplayAlerts = False
'Abre el libro base
    Workbooks.Open Filename:="\\dataserver\CUADRO SITUACION\2016 a 2020\2018\Libro111111.xlsx"
    
'Macro para dejarlo configurado y actualizado
    Sheets("Sucursales").Select
    Selection.ListObject.QueryTable.Refresh BackgroundQuery:=False
    Sheets("Master").Select
    Selection.ListObject.QueryTable.Refresh BackgroundQuery:=False
    Sheets("Sucursales").Select
        Range("B5").Value = "Ventas"
        Range("B6").Value = "Ventas"
    Sheets("Hoja1").Select
    ActiveSheet.PivotTables("Tabla dinámica1").PivotCache.Refresh
    
'Guarda en directorio específico con nombre específico
    ActiveWorkbook.SaveAs Filename:="\\dataserver\CUADRO SITUACION\2016 a 2020\2018\SIT.GRAL_ " _
    & Format(Now(), "YYYY.MM.DD") & ".xlsx" _
    , FileFormat:=xlOpenXMLWorkbook, CreateBackup:=False
    
'Cierra el libro
    ActiveWorkbook.Close
    
'Control de errores
    On Error Resume Next
    Kill "C:\Desktop\Testing*.csv*"
    On Error GoTo 0
    
'Vuelve a activar la visualización
    Application.ScreenUpdating = True
    
End Sub
